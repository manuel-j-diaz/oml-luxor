{
	"name": "Oml",
	"scopeName": "source.oml",
	"fileTypes": ["oml"],
	"patterns": [
		{
			"name": "keyword.other.oml",
			"match": "(?<=[^\\w-]|^)(terminology|concept|aspect|relation|source|target)(?=[^\\w-]|$)"
		},
		{
			"name": "string.quoted.double.oml",
			"begin": "\"",
			"end": "\""
		},
		{
			"name": "string.quoted.single.oml",
			"begin": "'",
			"end": "'"
		},
		{
			"name": "comment.line.oml",
			"match": "//.+"
		},
		{
			"name": "comment.block.oml",
			"begin": "/\\*",
			"end": "\\*/"
		}
	]
}